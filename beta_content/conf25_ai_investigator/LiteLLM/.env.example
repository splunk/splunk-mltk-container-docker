# Docker Compose project name for automatic prefixing
COMPOSE_PROJECT_NAME=ainv

# ===========================================
# API Keys for LLM services
# ===========================================

REQUESTY_API_KEY=
OPENROUTER_API_KEY=
OPENAI_API_KEY=
GROQ_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1

# ===========================================
# LITELLM CONFIGURATION
# ===========================================

# --- LiteLLM API Service ---
LITELLM_CONTAINER=ainv__litellm-main
LITELLM_IMAGE=ghcr.io/berriai/litellm:main-latest
#
LITELLM_PORT=7010  # External port
LITELLM_INTERNAL_PORT=4000  # Internal container port
LITELLM_HOST=0.0.0.0
LITELLM_LOG=INFO
LITELLM_MASTER_KEY=sk-21056a9b6f5910fa  # CHANGEME
LITELLM_DROP_PARAMS=True
LITELLM_SET_VERBOSE=False
LITELLM_STORE_MODEL_IN_DB=True
LITELLM_EXTRA_HOST=HOST_NAME # CHANGEME

# --- LiteLLM PostgreSQL Database ---
LITELLM_DB_CONTAINER=ainv__litellm-postgres
LITELLM_DB_VOLUME=ainv_litellm_postgres_data
#
LITELLM_DB_NAME=litellm
LITELLM_DB_USER=llmproxy
LITELLM_DB_PASSWORD=dbpassword9090  # CHANGEME
LITELLM_DB_PORT=5435  # External database port
LITELLM_DB_INTERNAL_PORT=5432  # Internal database port
LITELLM_POSTGRES_VERSION=16

# --- Raw Logger Proxy Service ---
RAW_LOGGING_CONTAINER=ainv__raw_logger
RAW_LOGGING_IMAGE=ainv__raw_logger
#
RAW_LOGGING_PORT=7011
RAW_LOGGING_DIR=./logs/litellm/raw
RAW_LOGGING_FORMAT=json
RAW_LOGGING_MAX_BODY_SIZE=1048576
RAW_LOGGING_ROTATION_SIZE=100  # MB before rotating
RAW_LOGGING_RETENTION_DAYS=30  # Days to keep old logs
RAW_LOGGING_COMPRESS=true  # Compress rotated log files
RAW_LOGGING_INCLUDE_HEADERS=false  # Include HTTP headers
RAW_LOGGING_REDACT_SENSITIVE=true  # Redact API keys
RAW_LOGGING_INCLUDE_RAW_PAYLOADS=true  # Include raw payloads
RAW_LOGGING_LOG_DIR=/app/logs
