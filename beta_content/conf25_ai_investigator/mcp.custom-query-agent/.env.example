# Docker Compose project name for automatic prefixing
COMPOSE_PROJECT_NAME=ainv

# MCP Server Configuration
MCP_SERVER_NAME=Custom Query Agent
MCP_SERVER_DESCRIPTION=MCP server to convert natural language queries to Splunk SPL
MCP_SERVER_VERSION=0.1.0

# Logging
MCP_SERVER_LOG_LEVEL=INFO

# Network Configuration
MCP_SERVER_HTTP_HOST=0.0.0.0
MCP_SERVER_SSE_PORT=7006
MCP_SERVER_STREAMABLE_HTTP_PORT=7007

# Transport selection (for standalone execution)
# Options: stdio, sse, streamable-http
MCP_SERVER_TRANSPORT=sse

# Docker Configuration
MCP_SERVER_DOCKER_IMAGE_NAME=custom-query-agent
MCP_SERVER_DOCKER_CONTAINER_NAME=ainv__mcp_custom-query-agent

# Custom Query Agent Host Configuration
CUSTOM_QUERY_AGENT_HOST=http://localhost:2993
DEFAULT_LLM_PROVIDER_MODEL=llama3.3:70b-instruct-q4_K_M
DEFAULT_Q_SAMPLES=10

# If need to expose the MCP server/container to the internet. Cloudflare Tunnel.
MCP_SERVER_HOST_EXTERNAL_URL=https://custom-query-agent-mcp.YOUR-SITE.com/mcp/
CLOUDFLARE_TOKEN=

# Optional API Key Authentication (only for Docker HTTP transports)
# Uncomment and set a secure key to enable authentication
MCP_SERVER_API_KEY=qwe321
