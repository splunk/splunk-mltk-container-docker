# Docker Compose project name for automatic prefixing
COMPOSE_PROJECT_NAME=ainv

# MCP Server Configuration
MCP_SERVER_NAME=Splunk MCP Lite
MCP_SERVER_DESCRIPTION=Lite MCP server for executing Splunk SPL search queries
MCP_SERVER_VERSION=0.1.0

# API Key for authentication (same as custom-query-agent)
MCP_SERVER_API_KEY=qwe321zxc

# Logging
MCP_SERVER_LOG_LEVEL=INFO

# Network Configuration
MCP_SERVER_HTTP_HOST=0.0.0.0
MCP_SERVER_SSE_PORT=7008
MCP_SERVER_STREAMABLE_HTTP_PORT=7009

# Transport selection (for standalone execution)
# Options: stdio, sse, streamable-http
MCP_SERVER_TRANSPORT=sse

# Docker Configuration
MCP_SERVER_DOCKER_IMAGE_NAME=splunk-mcp-lite
MCP_SERVER_DOCKER_CONTAINER_NAME=ainv__mcp_splunk-lite

# Splunk Configuration
SPLUNK_HOST=localhost

# Reach outside of Docker container to Splunk host.
# Must be FCDN or IP. DO NOT set it to localhost, as it will not work inside Docker container.
# On Linux, use Docker bridge IP (like: 172.17.0.1) instead of host.docker.internal
# Alternatively, uncomment 'extra_hosts:' in docker-compose.yml to enable name-mapping to localhost.
SPLUNK_HOST_FOR_DOCKER=172.17.0.1

SPLUNK_PORT=8089
SPLUNK_USERNAME=admin
SPLUNK_PASSWORD=XXXXXXXXXXXXX
# Optional: Use token instead of username/password
SPLUNK_TOKEN=
# SSL verification (true/false)
VERIFY_SSL=false

# Search Configuration
# Maximum number of events to return from searches (0 = unlimited)
SPL_MAX_EVENTS_COUNT=100000

# Risk tolerance level for SPL query validation (0 = reject all risky queries, 100 = allow all)
SPL_RISK_TOLERANCE=75

# Safe time range for searches - queries within this range get no time penalty
SPL_SAFE_TIMERANGE=24h

# Enable output sanitization to mask sensitive data (credit cards, SSNs)
SPL_SANITIZE_OUTPUT=true

# Cloudflare Tunnel Configuration
# Set your Cloudflare tunnel token here for external access
MCP_SERVER_HOST_EXTERNAL_URL=https://splunk-server-lite-mcp.YOUR-SITE.com/mcp/
CLOUDFLARE_TOKEN=
